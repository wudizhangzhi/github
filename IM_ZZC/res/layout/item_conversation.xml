<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="65dp"
        android:paddingBottom="5.0dip"
        android:paddingTop="5.0dip" >

        <ImageView
            android:id="@+id/recent_item_iv_avatar"
            android:layout_alignParentLeft="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/head" />

        <TextView
            android:id="@+id/recent_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="25.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="58.0dip"
            android:layout_toRightOf="@id/recent_item_iv_avatar"
            android:ellipsize="end"
            android:gravity="left|center"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/recent_item_tv_msg"
            android:layout_width="fill_parent"
            android:layout_height="35.0dip"
            android:layout_below="@id/recent_item_tv_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="35.0dip"
            android:layout_toRightOf="@id/recent_item_iv_avatar"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="6.0dip"
            android:paddingRight="6.0dip"
            android:singleLine="true"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/recent_item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="25.0dip"
            android:layout_above="@id/recent_item_tv_msg"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginRight="10dip"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="0.0dip"
            android:singleLine="true"
            android:textSize="10.0sp" />

        <TextView
            android:id="@+id/recent_item_tv_unread"
            android:layout_width="16dip"
            android:layout_height="16.0dip"
            android:layout_alignParentRight="true"
            android:layout_below="@id/recent_item_tv_time"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/list_newmessage2"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="10.0dip" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/base_horizontal_line" >
    </View>

</RelativeLayout>