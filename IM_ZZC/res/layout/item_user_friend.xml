<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    >

    <TextView
        android:id="@+id/contact_item_tv_alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e3e3e3"
        android:padding="2dp"
        android:textSize="18sp"
        />

    <ImageView
        android:id="@+id/contact_item_iv_avatar"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/contact_item_tv_alpha"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6.0dip"
        android:padding="5dp"
        android:src="@drawable/head" />

    <TextView
        android:id="@+id/contact_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/contact_item_iv_avatar"
        android:layout_below="@id/contact_item_tv_alpha"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6.0dip"
        android:layout_toRightOf="@id/contact_item_iv_avatar"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="20sp" 
        android:text="test"/>

</RelativeLayout>